/**
 * Memory of eight 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM8 {
    IN in[16], load, address[3];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address, a=d0, b=d1, c=d2, d=d3, e=d4, f=d5, g=d6, h=d7);
    Register(in=in, load=d0, out=r1);
    Register(in=in, load=d1, out=r2);
    Register(in=in, load=d2, out=r3);
    Register(in=in, load=d3, out=r4);
    Register(in=in, load=d4, out=r5);
    Register(in=in, load=d5, out=r6);
    Register(in=in, load=d6, out=r7);
    Register(in=in, load=d7, out=r8);
    Mux8Way16(a=r1, b=r2, c=r3, d=r4, e=r5, f=r6, g=r7, h=r8, sel=address, out=out);
}